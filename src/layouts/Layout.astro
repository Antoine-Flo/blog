---
import './src/styles/global.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Change Me</title>
  </head>
  <body class="bg-background fg-foreground">
    <div
      class="flex flex-col max-w-3xl min-h-screen border-x border-accent/10 m-auto p-5 md:p-10"
    >
      <header class="flex flex-col">
        <div class="flex items-center justify-between">
          <div class="flex flex-1">
            <a
              id="logo"
              class="px-2.5 py-1.5 max-w-full no-underline flex items-center bg-accent text-background font-bold"
            >
              Test
            </a>
          </div>
        </div>
      </header>
      <slot />
    </div>
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  #logo::after {
    content: " ";
    background: repeating-linear-gradient(
      90deg,
      var(--color-accent),
      var(--color-accent) 2px,
      transparent 0,
      transparent 10px
    );
    display: block;
    width: 100%;
  }
</style>
