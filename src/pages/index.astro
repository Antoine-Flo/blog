---
import Layout from '@layouts/Layout.astro'
import { getSortedPosts, url } from '@utils'
import { getCollection } from 'astro:content'
import PostPreview from '@components/PostPreview.astro'
import Pagination from '@components/Pagination.astro'
import BlockHeader from '@components/BlockHeader.astro'

const homeContent = await getCollection('home')
const posts = (await getSortedPosts()).slice(0, 3)
---

<Layout>
  {
    homeContent.map(
      (home) =>
        home.body && (
          <div
            class:list={[
              'my-4 max-w-full prose',
              home.data.framed && ' border-accent/10',
            ]}
            set:html={home.rendered?.html}
          />
        ),
    )
  }
  <BlockHeader>Posts</BlockHeader>
  {posts.map((post) => <PostPreview post={post} />)}
  <Pagination nextLink={url('posts')} nextText="Archive" />
</Layout>

<style is:global>
  a.heading-anchor {
    display: none !important;
  }
</style>
